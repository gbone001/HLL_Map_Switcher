# Multiple Servers Setup - Easy Format!

# Discord Settings
DISCORD_TOKEN=your_discord_bot_token
DISCORD_GUILD_ID=your_discord_guild_id
DISCORD_CHANNEL_ID=your_discord_channel_id

# Shared Server Credentials (optional shortcuts)
RCON_PORT=7779
RCON_PASSWORD=your_shared_rcon_password

# CRCON HTTP API (optional, used for REST endpoints like /get_maps)
CRCON_BASE_URL=https://your-crcon-host/api
CRCON_USERNAME=your_crcon_username
CRCON_PASSWORD=your_crcon_password

# Server 1
SERVER1_NAME=Frontline Server
SERVER1_HOST=server1.yourhost.com
# Uncomment to override the shared port/password for this server
# SERVER1_PORT=7779
# SERVER1_PASSWORD=override_password_if_needed

# Server 2
SERVER2_NAME=Training Server
SERVER2_HOST=server2.yourhost.com
# SERVER2_PORT=7779
# SERVER2_PASSWORD=override_password_if_needed

# Server 3
SERVER3_NAME=Event Server
SERVER3_HOST=server3.yourhost.com
# SERVER3_PORT=7779
# SERVER3_PASSWORD=override_password_if_needed

# Add more servers as needed (SERVER4_HOST, SERVER4_NAME, etc.)

# Optional Settings
DEBUG=True
